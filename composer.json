{
  "name": "inpsyde/logzio-monolog",
  "description": "Logz.io integration for Monolog",
  "keywords": [
    "log",
    "logging",
    "monolog"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Christian Br√ºckner",
      "email": "chris@chrico.info",
      "homepage": "https://www.chrico.info",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.0",
    "ext-curl": "*",
    "monolog/monolog": "^1.23"
  },
  "require-dev": {
    "ext-json": "*",    
    "phpunit/phpunit": "^6.3",
    "inpsyde/php-coding-standards": "^1"
  },
  "autoload": {
    "psr-4": {
      "Inpsyde\\LogzIoMonolog\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Inpsyde\\LogzIoMonolog\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
